<% content_for :title, "New Connection - Kerouac" %>

<div class="mx-auto max-w-2xl">
  <div class="mb-8">
    <h1 class="text-xl font-bold text-terminal-bright uppercase tracking-wider">
      &gt; Add Connection_
    </h1>
    <p class="mt-1 text-sm text-terminal-dim">// Connect a writing platform to track your activity</p>
  </div>

  <div class="card">
    <div class="card-body">
      <%= render "form", connection: @connection %>
    </div>
  </div>

  <!-- Platform Help -->
  <div class="mt-8 space-y-4">
    <h2 class="text-sm font-bold text-terminal-bright uppercase tracking-wider">
      [ Supported Platforms ]
    </h2>

    <div class="grid grid-cols-1 gap-4 sm:grid-cols-3">
      <!-- Substack -->
      <div class="card">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-3">
            <div class="platform-icon platform-icon-substack">S</div>
            <div>
              <p class="text-sm font-medium text-terminal">Substack</p>
              <p class="text-xs text-terminal-dim">RSS-based sync</p>
            </div>
          </div>
          <p class="text-xs text-terminal-dim">
            // Enter your subdomain (e.g., "yourname" from yourname.substack.com)
          </p>
        </div>
      </div>

      <!-- Ghost -->
      <div class="card">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-3">
            <div class="platform-icon platform-icon-ghost">G</div>
            <div>
              <p class="text-sm font-medium text-terminal">Ghost</p>
              <p class="text-xs text-terminal-dim">Admin API sync</p>
            </div>
          </div>
          <p class="text-xs text-terminal-dim">
            // Requires Admin API key from your Ghost settings
          </p>
        </div>
      </div>

      <!-- Medium -->
      <div class="card">
        <div class="card-body">
          <div class="flex items-center gap-3 mb-3">
            <div class="platform-icon platform-icon-medium">M</div>
            <div>
              <p class="text-sm font-medium text-terminal">Medium</p>
              <p class="text-xs text-terminal-dim">RSS-based sync</p>
            </div>
          </div>
          <p class="text-xs text-terminal-dim">
            // Enter your Medium username (with or without @)
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
