<%
  status_class = case connection.status.to_s
  when "active"
    "status-dot-active"
  when "pending"
    "status-dot-pending"
  when "error"
    "status-dot-error"
  else
    "status-dot-inactive"
  end

  text_color = case connection.status.to_s
  when "active" then "text-green-400"
  when "pending" then "text-yellow-400"
  when "error" then "text-red-400"
  else "text-gray-400"
  end
%>

<span class="inline-flex items-center text-xs <%= text_color %>">
  <span class="status-dot <%= status_class %>"></span>
  <%= connection.status.upcase %>
</span>
