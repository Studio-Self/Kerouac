<div class="flex min-h-full flex-col justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md text-center">
    <h1 class="text-3xl font-bold text-terminal-bright">
      +--[ KEROUAC ]--+
    </h1>
    <h2 class="mt-6 text-xl font-bold text-terminal uppercase tracking-wider">
      &gt; Create Account_
    </h2>
    <p class="mt-2 text-sm text-terminal-dim">// Track your writing activity across platforms</p>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <% if resource.errors.any? %>
            <div class="flash-alert">
              <div class="font-bold mb-2"><%= pluralize(resource.errors.count, "error") %> prohibited this account from being created:</div>
              <ul class="list-none space-y-1">
                <% resource.errors.full_messages.each do |message| %>
                  <li class="text-sm">- <%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <label for="user_email" class="form-label">Email</label>
            <div class="mt-2">
              <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  class: "form-input" %>
            </div>
          </div>

          <div>
            <label for="user_password" class="form-label">Password</label>
            <div class="mt-2">
              <%= f.password_field :password,
                  autocomplete: "new-password",
                  class: "form-input" %>
            </div>
            <% if @minimum_password_length %>
              <p class="mt-1 text-xs text-terminal-dim">// <%= @minimum_password_length %> characters minimum</p>
            <% end %>
          </div>

          <div>
            <label for="user_password_confirmation" class="form-label">Confirm Password</label>
            <div class="mt-2">
              <%= f.password_field :password_confirmation,
                  autocomplete: "new-password",
                  class: "form-input" %>
            </div>
          </div>

          <div>
            <%= f.submit "CREATE ACCOUNT",
                class: "btn-primary w-full justify-center cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>

    <p class="mt-8 text-center text-sm text-terminal-dim">
      Already have an account?
      <%= link_to "[ SIGN IN ]", new_session_path(resource_name), class: "text-terminal hover:text-terminal-bright" %>
    </p>
  </div>
</div>
