<div class="flex min-h-full flex-col justify-center py-12 px-4 sm:px-6 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-md text-center">
    <h1 class="text-3xl font-bold text-terminal-bright">
      +--[ KEROUAC ]--+
    </h1>
    <h2 class="mt-6 text-xl font-bold text-terminal uppercase tracking-wider">
      &gt; Sign In_
    </h2>
    <p class="mt-2 text-sm text-terminal-dim">// Access your writing dashboard</p>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-md">
    <div class="card">
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f| %>
          <div>
            <label for="user_email" class="form-label">Email</label>
            <div class="mt-2">
              <%= f.email_field :email,
                  autofocus: true,
                  autocomplete: "email",
                  class: "form-input" %>
            </div>
          </div>

          <div>
            <label for="user_password" class="form-label">Password</label>
            <div class="mt-2">
              <%= f.password_field :password,
                  autocomplete: "current-password",
                  class: "form-input" %>
            </div>
          </div>

          <div class="flex items-center justify-between">
            <% if devise_mapping.rememberable? %>
              <div class="flex items-center">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, class: "ml-2 text-sm text-terminal-dim" %>
              </div>
            <% end %>

            <div class="text-sm">
              <%= link_to "[ FORGOT? ]", new_password_path(resource_name), class: "text-terminal-dim hover:text-terminal" %>
            </div>
          </div>

          <div>
            <%= f.submit "SIGN IN",
                class: "btn-primary w-full justify-center cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>

    <p class="mt-8 text-center text-sm text-terminal-dim">
      No account?
      <%= link_to "[ SIGN UP ]", new_registration_path(resource_name), class: "text-terminal hover:text-terminal-bright" %>
    </p>
  </div>
</div>
